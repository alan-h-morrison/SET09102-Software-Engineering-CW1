        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="1000">
    <Grid>
        <TextBlock TextWrapping="Wrap" Text="Napier Bank Messaging" VerticalAlignment="Top" Margin="110,10,111,0" TextDecorations="Underline" FontSize="72"/>
        <Button x:Name="btnMessage" Content="Create Message" VerticalAlignment="Top" Margin="246,179,246,0" FontSize="36" Height="100" Click="btnMessage_Click"/>
        <Button x:Name="btnFile" Content="Upload File" VerticalAlignment="Top" Margin="246,339,246,0" FontSize="36" Height="100" Click="btnFile_Click"/>

    </Grid>
</Window>
