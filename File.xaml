<Window x:Class="Bank.File"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="File" Height="270" Width="1000">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="50,41,0,0" TextWrapping="Wrap" Text="Local Path" VerticalAlignment="Top" FontSize="30" TextDecorations="Underline"/>
        <TextBox x:Name="txtPath" Height="30" Margin="50,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Background="#FFF0F0F0" HorizontalAlignment="Left" Width="865"/>
        <Button x:Name="btnFile" Content="..." VerticalAlignment="Top" Margin="915,87,26,0" Height="30" Click="btnFile_Click"/>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="50,167,0,0" FontSize="24" Height="50" Click="btnBack_Click"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Width="125" Margin="841,167,0,0" FontSize="24" Click="btnSubmit_Click" Height="50" VerticalAlignment="Top"/>

    </Grid>
</Window>
